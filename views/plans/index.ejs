<%- include ("../partials/header.ejs") %>
<%- include ("../partials/homenavbar.ejs") %>
<body>
    <div class="container">
        <h2 class="mt-5">List of plans</h2>
        <hr>
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Price</th>
              <th>Deactivate?</th>
              <th>Action</th>
          </tr>
          </thead>
          <tbody>
            <% plans.forEach(plan => { %>
              <tr>
                <td><%= plan.id %></td>
                <td><%= plan.title %></td>
                <td>$ <%= plan.value %></td>
                <td><%= plan.deactivated %></td>
                <td><a href="/plans/deactivate/<%= plan.id %>">Deactivate</a></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
    </div>
</body>

